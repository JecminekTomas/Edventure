<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddEditTutorActivity"
    tools:showIn="@layout/activity_add_edit_tutor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/basic_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/tutorAvatarPicture"
                        android:visibility="invisible"
                        android:layout_width="@dimen/imageSize"
                        android:layout_height="@dimen/imageSize"
                        android:clickable="true"
                        android:contentDescription="@string/avatar_description"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/tutorAvatarIcon"
                        android:layout_width="@dimen/imageSize"
                        android:layout_height="@dimen/imageSize"
                        android:clickable="true"
                        android:contentDescription="@string/avatar_description"
                        android:focusable="true"
                        android:src="@drawable/ic_account_circle_color_secondary_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tutorChangePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zmena_obrazku"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/jmeno"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:theme="@android:style/Theme.Holo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/prijmeni"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:theme="@android:style/Theme.Holo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_place_color_secondary_dark_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:hint="@string/misto_vyuky"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/black"
                    android:theme="@android:style/Theme.Holo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:id="@+id/pricePerHour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_attach_money_color_secondary_dark_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:hint="@string/hodinova_sazba"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:theme="@android:style/Theme.Holo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:id="@+id/stars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_star_color_secondary_dark_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:hint="@string/pocet_hvezd"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:theme="@android:style/Theme.Holo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableStart="@drawable/ic_computer_color_secondary_dark_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:focusable="false"
                    android:hint="@string/online_vyuka"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:theme="@android:style/Theme.Holo" />

                <Switch
                    android:id="@+id/onlineLecture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:paddingEnd="@dimen/double_indentation"
                    tools:ignore="RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableStart="@drawable/ic_group_color_secondary_dark_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:focusable="false"
                    android:hint="@string/skupinova_vyuka"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:theme="@android:style/Theme.Holo" />

                <Switch
                    android:id="@+id/groupLecture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:paddingEnd="@dimen/double_indentation"
                    tools:ignore="RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/half_indentation"
                android:layout_marginBottom="@dimen/basic_indentation"
                android:backgroundTint="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/basic_indentation">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableStart="@drawable/ic_home_color_dark_secondary_24dp"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:focusable="false"
                    android:hint="@string/vyuka_u_lektora"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:theme="@android:style/Theme.Holo" />

                <Switch
                    android:id="@+id/homeLecture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawablePadding="@dimen/basic_indentation"
                    android:paddingEnd="@dimen/double_indentation"
                    tools:ignore="RtlSymmetry" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/saveChanges"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/ulozit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>