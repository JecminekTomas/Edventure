<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddTutorActivity"
    tools:showIn="@layout/activity_add_tutor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/basic_indentation"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:contentDescription="@string/avatar_description"
                android:focusable="true"
                android:src="@drawable/ic_account_circle_color_secondary_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zmena_obrazku"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_person_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:hint="@string/jmeno"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:theme="@android:style/Theme.Holo"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_place_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:hint="@string/misto_vyuky"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                android:theme="@android:style/Theme.Holo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_attach_money_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:hint="@string/hodinova_sazba"
                android:importantForAutofill="no"
                android:inputType="number"
                android:theme="@android:style/Theme.Holo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_star_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:hint="@string/pocet_hvezd"
                android:importantForAutofill="no"
                android:inputType="number"
                android:theme="@android:style/Theme.Holo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:drawableStart="@drawable/ic_computer_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:focusable="false"
                android:hint="@string/online_vyuka"
                android:importantForAutofill="no"
                android:inputType="number"
                android:theme="@android:style/Theme.Holo" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawablePadding="@dimen/basic_indentation"
                android:paddingEnd="@dimen/double_indentation"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:drawableStart="@drawable/ic_group_color_secondary_dark_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:focusable="false"
                android:hint="@string/skupinova_vyuka"
                android:importantForAutofill="no"
                android:inputType="number"
                android:theme="@android:style/Theme.Holo" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawablePadding="@dimen/basic_indentation"
                android:paddingEnd="@dimen/double_indentation"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/half_indentation"
            android:layout_marginTop="@dimen/basic_indentation"
            android:backgroundTint="@color/colorSecondaryLight"
            app:cardCornerRadius="@dimen/basic_indentation"
            app:cardElevation="@dimen/basic_indentation">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:drawableStart="@drawable/ic_home_color_dark_secondary_24dp"
                android:drawablePadding="@dimen/basic_indentation"
                android:focusable="false"
                android:hint="@string/vyuka_u_lektora"
                android:importantForAutofill="no"
                android:inputType="number"
                android:theme="@android:style/Theme.Holo" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawablePadding="@dimen/basic_indentation"
                android:paddingEnd="@dimen/double_indentation"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/ulozit"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>