<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edventure" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".TutorApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App" >
        <activity
            android:name=".activities.BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.App.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SelectTutorActivity"
            android:label="@string/title_activity_select_tutor"
            android:theme="@style/Theme.App.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.AddEditTutorActivity"
            android:label="@string/title_activity_add_tutor"
            android:theme="@style/Theme.App.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.arch.BaseActivity"
            android:theme="@style/Theme.App.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.FilterTutorActivity"
            android:label="@string/title_activity_filter_tutor"
            android:theme="@style/Theme.App.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.TutorProfileActivity"
            android:label="@string/teachers_profile"
            android:theme="@style/Theme.App.NoActionBar" >
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.edventure.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>
    </application>

</manifest>